<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="28dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="40dp"
    android:background="@drawable/modal_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dateTV"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans_regular"
        android:textColor="#1E1584"
        android:text="21 июня 2023 г. 20:09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_iv"
            android:src="@drawable/avatar_1"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/second_iv"
            android:visibility="gone"
            android:src="@drawable/best"
            android:layout_width="80dp"
            android:layout_height="80dp"/>


    </LinearLayout>

    <TextView
        android:layout_marginTop="25dp"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans_regular"
        android:textColor="#1E1584"
        android:text="Название "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:maxWidth="250dp"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:fontFamily="@font/noto_sans_regular"
        android:textColor="#1E1584"
        android:text="“Большое название которое помещается на двух строчках”"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans_regular"
        android:textColor="#1E1584"
        android:text="Отправлено Марии Ивановой"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/additional_data"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawableLeft="@drawable/coin"
            android:drawablePadding="5dp"
            android:text="+ 1346"
            style="@style/baseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/karma"
            android:text="+ 4567"
            style="@style/baseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    
    <Button
        android:id="@+id/successBtn"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/blue_gradient"
        android:fontFamily="@font/noto_sans_regular"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:textSize="14sp"
        android:text="Отлично!"/>


</LinearLayout>