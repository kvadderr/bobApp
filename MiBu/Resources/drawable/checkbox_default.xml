<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_checked="true">
		<shape>
			<solid android:color="#7265FB" />
			<!-- Устанавливаем синий цвет фона для выбранного состояния -->
			<corners android:radius="3dp" />
			<stroke android:color="#7265FB" android:width="1dp" />
			<!-- Устанавливаем радиус закругления углов -->
			<size android:width="20dp" android:height="20dp" />
		</shape>
	</item>
	<item>
		<shape>
			<solid android:color="#fff" />
			<!-- Устанавливаем светло-серый цвет фона для не выбранного состояния -->
			<corners android:radius="3dp" />
			<stroke android:color="#7265FB" android:width="1dp" />
			<!-- Устанавливаем радиус закругления углов -->
			<size android:width="20dp" android:height="20dp" />
		</shape>
	</item>
</selector>